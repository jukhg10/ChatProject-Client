<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" prefHeight="400.0" prefWidth="350.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.arquitectura.vistas.InviteUserController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>
    <children>
        <Label fx:id="channelNameLabel" text="Invitar a [Channel Name]">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label text="Selecciona un usuario para invitar:"/>
        <ListView fx:id="usersListView" VBox.vgrow="ALWAYS" />
        <Button fx:id="inviteButton" onAction="#handleInviteButtonAction" text="Invitar Usuario" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" />
        <Label fx:id="statusLabel" textFill="GREEN"/>
    </children>
</VBox>